{% set page_title = "通知メッセージ" %}
{% set page_description = "BRT - 弁当予約の通知メッセージ。" %}

{#レイアウト継承#}
{% extends "layout/layout.twig" %}

{# スタイルシートの追加 #}
{% block header_scripts_add %}
{% endblock %}

{# ページ本文 #}
{% block page_content %}

    <div class="jumbotron bg-warning text-center d-none d-sm-block">
        <h2>通知</h2>
    </div>
    <div class="bg-warning py-3 text-center d-sm-none">
        <h2>通知</h2>
    </div>


    <div id="messageText"aria-live="assertive" role="alert">
        <div class="p-3">{{ message | nl2br}}</div>
    </div>

    <form method="post" action="{{ get_base_path() }}/mypage/menu" autocomplete="off">
        <div class="my-5 text-center">
            <button type="submit" name="showTargetMonth" value="{{ saleDate }}" class="button btn-success text-white px-3 py-1">メニューへ</div>
        </div>
    </form>

{% endblock %}

